{
  "manifest_version": 3,
  "name": "LinkedIn Job Application Assistant",
  "version": "1.0",
  "description": "A Chrome extension to assist with LinkedIn job applications",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
